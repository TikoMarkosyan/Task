{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src", "declarations.d.ts"],
  "exclude": ["**/node_modules", "**/Pods"]
}
